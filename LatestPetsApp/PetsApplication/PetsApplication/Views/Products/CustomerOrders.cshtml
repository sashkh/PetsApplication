@model IEnumerable<PetsApplication.Models.Products>

@{
    ViewBag.Title = "Items In Your Cart";
}

<h2>CustomerOrders</h2>



<table class="table">
    <tr>
        <th></th>
        <th></th>
        <th>

        <td class="alert-success">Total Amount: @Model.Sum(x => x.price)</td>
        
        <th>
            @Html.ActionLink("Place Order", "OrderDetails", new { id = "" }, new { @class = "btn btn-success" })
        </th>
    </tr>
    <tr>
        <th>
            Image
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                <img src=@Url.Content(item.ImageUrl) class="img-circle" alt="Cinque Terre" width="304" height="236">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>

            <td>

          
                @Html.ActionLink("Delete", "Delete","Products", new { id = item.product_id }, new { @class = "btn btn-danger" })
                

            </td>
        </tr>



    }

</table>
